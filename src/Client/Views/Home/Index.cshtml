@model IEnumerable<Client.Data.ScholarshipApplicant>
@{
  ViewBag["title"] = "Scholarships";
}

<div class="well">
  <h2>Institution name</h2>
  <h3>Scholarship applicants</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Average grade</th>
        <th>ECTS</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var applicant in Model)
      {
        <tr>
          <td>@applicant.Name</td>
          <td>@applicant.AverageGrade</td>
          <td>@applicant.Ects</td>
        </tr>
      }
    </tbody>
  </table>
  <form method="post" asp-area="" asp-controller="Home" asp-action="InitiateApply">
    <button type="submit" class="btn btn-success">Apply for scholarship</button>
  </form>
</div>