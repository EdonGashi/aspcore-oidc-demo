@using System.Collections
@model ResourceServer.Models.AddGradeViewModel

@{
  ViewData["Title"] = "Create subject";
}

<br />
<h2>Add grade for student @Model.StudentId</h2>
<br />

<form method="post" asp-area="" asp-controller="Grades" asp-action="Add">
  <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="SubjectId"></label>
    <select asp-for="SubjectId"
            asp-items="@(new SelectList((IEnumerable)ViewData["subjects"], "Id", "Name", Model.SubjectId))"
            class="form-control">
    </select>
    <span asp-validation-for="Grade" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Grade"></label>
    <input asp-for="Grade" class="form-control" />
    <span asp-validation-for="Grade" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-default">Create</button>
</form>